#define FUSE_USE_VERSION 31
#include <fuse3/fuse.h>
#include <stdio.h>
#include <string.h>
#include <errno.h>
#include <fcntl.h>
#include <sys/stat.h>
#include <unistd.h>
#include <dirent.h>
#include <stdlib.h>

static const char *storage_dir = "/home/vboxuser/storage";

static int myfs_getattr(const char *path, struct stat *stbuf, struct fuse_file_info *fi)
{
    (void) fi;
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int res = lstat(fullpath, stbuf);
    if (res == -1)
        return -errno;
    return 0;
}

static int myfs_readdir(const char *path, void *buf, fuse_fill_dir_t filler,
                        off_t offset, struct fuse_file_info *fi, enum fuse_readdir_flags flags)
{
    (void) offset;
    (void) fi;
    (void) flags;

    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    DIR *dp = opendir(fullpath);
    if (dp == NULL)
        return -errno;

    struct dirent *de;
    filler(buf, ".", NULL, 0, 0);
    filler(buf, "..", NULL, 0, 0);
    while ((de = readdir(dp)) != NULL)
        filler(buf, de->d_name, NULL, 0, 0);

    closedir(dp);
    return 0;
}

static int myfs_open(const char *path, struct fuse_file_info *fi)
{
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int fd = open(fullpath, fi->flags);
    if (fd == -1)
        return -errno;
    close(fd);
    return 0;
}

static int myfs_read(const char *path, char *buf, size_t size, off_t offset,
                     struct fuse_file_info *fi)
{
    (void) fi;
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int fd = open(fullpath, O_RDONLY);
    if (fd == -1)
        return -errno;
    int res = pread(fd, buf, size, offset);
    if (res == -1)
        res = -errno;
    close(fd);
    return res;
}

static int myfs_write(const char *path, const char *buf, size_t size, off_t offset,
                      struct fuse_file_info *fi)
{
    (void) fi;
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int fd = open(fullpath, O_WRONLY | O_CREAT, 0777);
    if (fd == -1)
        return -errno;
    int res = pwrite(fd, buf, size, offset);
    if (res == -1)
        res = -errno;
    close(fd);
    chmod(fullpath, 0777); // Ensure world-writable after every write
    return res;
}

static int myfs_create(const char *path, mode_t mode, struct fuse_file_info *fi)
{
    (void) fi;
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int fd = creat(fullpath, 0777);
    if (fd == -1)
        return -errno;
    close(fd);
    chmod(fullpath, 0777);
    return 0;
}

static int myfs_mkdir(const char *path, mode_t mode)
{
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int res = mkdir(fullpath, 0777);
    if (res == -1)
        return -errno;
    chmod(fullpath, 0777);
    return 0;
}

static int myfs_unlink(const char *path)
{
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int res = unlink(fullpath);
    if (res == -1)
        return -errno;
    return 0;
}

static int myfs_rmdir(const char *path)
{
    char fullpath[512];
    snprintf(fullpath, sizeof(fullpath), "%s%s", storage_dir, path);
    int res = rmdir(fullpath);
    if (res == -1)
        return -errno;
    return 0;
}

static const struct fuse_operations myfs_oper = {
    .getattr = myfs_getattr,
    .readdir = myfs_readdir,
    .open    = myfs_open,
    .read    = myfs_read,
    .write   = myfs_write,
    .create  = myfs_create,
    .mkdir   = myfs_mkdir,
    .unlink  = myfs_unlink,
    .rmdir   = myfs_rmdir,
};

int main(int argc, char *argv[])
{
    // Create storage folder automatically with 0777 permissions
    mkdir(storage_dir, 0777);
    chmod(storage_dir, 0777);
    umask(0); // Disable umask to allow 0777 files
    return fuse_main(argc, argv, &myfs_oper, NULL);
}
